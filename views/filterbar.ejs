<div style="display: flex">
  <div>
    <a
      href="/feeds?order=hot"
      class="tag tag-button"
      style="
        margin-left: 16px;
        font-size: 18px;
        font: Noto Sans;
        font-weight: 700;
        text-transform: unset;
      "
      role="button"
    >
      HOT
    </a>
  </div>
  <div>
    <a
      href="/feeds?order=recent"
      class="tag tag-button"
      style="
        margin-left: 16px;
        font-size: 18px;
        font: Noto Sans;
        font-weight: 700;
        text-transform: unset;
      "
      role="button"
    >
      Recent
    </a>
  </div>
  <div class="dropdown" style="display: inline-block; align-items: center; font-size: 20px">
    <button
      class="dropdown-button"
      aria-expanded="TRUE"
      aria-haspopup="TRUE"
      style="align-items: center; justify-content: center"
    >
      <i class="fas fa-angle-down"></i>
    </button>
    <div
      class="dropdown-menu-fixed"
      role="menu"
      style="position: fixed; right: 5px; top: 39.6333px"
    >
      <ul>
        <% for (var i = 0; i < tags.length; i++) { %>
        <li>
          <a href="/feeds?tag=<%= tags[i].id %>" style="display: flex">
            <!-- <div style="width: 50px"><i class="fas fa-edit" style="font-size: 20px"></i></div> -->
            <div style="width: 155px; font-size: 18px; align-items: center">
              <%= tags[i].tagname %>
            </div>
          </a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
  <div></div>
</div>
