<div style="display: flex">
  <div>
    <a
      href="/feeds?order=hot"
      class="tag tag-button"
      style="
        margin-left: 16px;
        font-size: 18px;
        font: Noto Sans;
        font-weight: 700;
        text-transform: unset;
      "
      role="button"
    >
      뜨끈한 순
    </a>
  </div>
  <div>
    <a
      href="/feeds?order=recent"
      class="tag tag-button"
      style="
        margin-left: 16px;
        font-size: 18px;
        font: Noto Sans;
        font-weight: 700;
        text-transform: unset;
      "
      role="button"
    >
      최근 순
    </a>
  </div>
  <div
    class="dropdown"
    style="display: inline-flex; align-items: center; font-size: 20px; padding: 0 0; margin: 0 0"
  >
    <a
      href="/feeds?order=recent"
      class="tag tag-button"
      style="
        margin-left: 16px;
        font-size: 18px;
        font: Noto Sans;
        font-weight: 700;
        text-transform: unset;
        width: 200px;
      "
      role="button"
    >
      <button
        class="dropdown-button"
        style="
          margin: 0 0;
          display: inline-flex;
          background: none;
          border: none;
          padding: 0 0;
          align-items: center;
          justify-content: center;
        "
      >
        <p style="margin: 0px 0px; display: flex; white-space: nowrap">분류 목록</p>
        <i class="fas fa-angle-down" style="margin-left: 15px"></i>
      </button>
    </a>
    <div
      class="dropdown-menu-fixed"
      role="menu"
      style="position: fixed; right: calc(50% - 170px); top: 150px"
    >
      <ul>
        <% for (var i = 0; i < tags.length; i++) { %>
        <li style="padding: 0 0; margin: 0 0">
          <a href="/feeds?tag=<%= tags[i].id %>" style="display: flex">
            <!-- <div style="width: 50px"><i class="fas fa-edit" style="font-size: 20px"></i></div> -->
            <div style="width: 200px; font-size: 18px; align-items: center">
              <%= tags[i].tagname %>
            </div>
          </a>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
  <div></div>
</div>
