<div style="display: inline-flex">
  <div style="margin-right: 8px">
    <div>
      <img src="/images/user-icon.png" width="18px" alt="user-icon" />
    </div>
    <div
      style="
        margin-top: 5px;
        box-sizing: border-box;
        display: inline-block;
        margin-left: 0px;
        vertical-align: top;
        width: 18px;
        justify-items: center;
        height: calc(100% - 25px);
      "
    >
      <i
        style="
          margin-left: 0px;
          border-right: 2px solid #edeff1;
          display: block;
          height: 100%;
          width: 55%;
        "
      ></i>
    </div>
  </div>
  <div>
    <span class="name" style="font-size: 14px; font-weight: bold"> <%= comment.user.name %> </span>
    <span class="time" style="margin-left: 10px; color: #b0b0b0"> <%= comment.createdAt %> </span>
    <p><%= comment.content %></p>
    <div style="display: inline-flex">
      <div>
        <button type="button" class="modify-button" style="background: none; border: none">
          <i class="far fa-thumbs-up"></i>
        </button>
        <div style="display: flex; align-items: center; justify-content: center">
          <span style="font-size: 12px"> <%= comment.votes %> </span>
        </div>
      </div>
      <div>
        <button
          type="button"
          class="modify-button"
          style="margin-left: 7px; background: none; border: none"
        >
          <i class="fas fa-pencil-alt"></i>
        </button>
      </div>
      <div>
        <button
          type="button"
          class="delete-button"
          style="margin-left: 7px; background: none; border: none"
        >
          <i class="far fa-trash-alt"></i>
        </button>
      </div>
    </div>
  </div>
</div>
